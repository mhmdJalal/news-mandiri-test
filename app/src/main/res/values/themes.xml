<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAppMandiriTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/CardDefault</item>
    </style>

    <style name="CardDefault" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/amber_50</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeSmall" parent="">
        <item name="cornerSize">8dp</item>
    </style>
</resources>